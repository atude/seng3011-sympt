{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es2018",
    "outDir": "dist",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "strict": true,
    "sourceMap": true,
    "inlineSources": true,
    "sourceRoot": "/"
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}